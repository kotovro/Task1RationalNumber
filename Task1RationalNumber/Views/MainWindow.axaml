<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Task1RationalNumber.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		x:DataType="vm:MainWindowViewModel"
		x:Class="Task1RationalNumber.Views.MainWindow"
		x:CompileBindings="True"
		
        Icon="/Assets/avalonia-logo.ico"
        Title="Rational number">
	<Window.Styles>
		<Style Selector="Button">
			<Setter Property="Background" Value="Green"/>
		</Style>
		<Style Selector="TextBox#MyTextBox">
			
			<Setter Property="Opacity" Value="1.0" />

			

				<!--Trigger when IsEnabled is False 
				<DataTrigger Binding="{Binding IsEnabled}" Value="False">
					<Setter Property="Opacity" Value="0.5" />
				</DataTrigger> 
			</Style.Triggers>-->
		</Style>
	</Window.Styles>
    <Design.DataContext>
		<!--This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)-->
        <vm:MainWindowViewModel/>
    </Design.DataContext>
	<Panel>
		<Grid DataContext="{Binding ReactiveViewModel}" HorizontalAlignment="Left" VerticalAlignment="Center" ColumnDefinitions="Auto, Auto, Auto, Auto, Auto, Auto" RowDefinitions="Auto, Auto, Auto, Auto, Auto">	  
			<TextBox x:Name="Numerator" Text="{Binding Numerator}" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="0" Grid.Column="1"/>
			<TextBox x:Name="Denominator" Text="{Binding Denominator}" HorizontalAlignment="Left" VerticalAlignment="Stretch" Grid.Row="2" Grid.Column="1"/>
			<Border Height="2" Background="Black" Margin="5,0" Grid.Row="1" Grid.Column="1"/>
			<ComboBox ItemsSource="{Binding Operations}" SelectedItem="{Binding SelectedOperation}" Grid.Row="1" Grid.Column="3"  IsEnabled="{Binding IsOperationEnabled}"/>
			<TextBox x:Name="ToStringResult" Text="{Binding ToStringText}" Grid.Row="1" Grid.Column="6" IsVisible="{Binding IsToStringVisible}" IsReadOnly="True"/>
			
			<TextBox x:Name="OperandNumerator" Text="{Binding OperandNumerator}" HorizontalAlignment="Right" VerticalAlignment="Stretch" Grid.Row="0" Grid.Column="4" IsVisible="{Binding IsOperandVisible}"/>
			<Border Height="2" Background="Black" Margin="5,0" Grid.Row="1" Grid.Column="4" IsVisible="{Binding IsOperandVisible}"/>
			<TextBox x:Name="OperandDenominator" Text="{Binding OperandDenominator}" HorizontalAlignment="Right" VerticalAlignment="Stretch" Grid.Row="2" Grid.Column="4" IsVisible="{Binding IsOperandVisible}"/>

			
			<TextBox x:Name="MultiplyResult" Text="{Binding Multiply}" Grid.Row="1" Grid.Column="6" IsVisible="{Binding IsMultiplyVisible}" IsReadOnly="True"/>
			<TextBox x:Name="AdditionResult" Text="{Binding Addition}" Grid.Row="1" Grid.Column="6" IsVisible="{Binding IsAdditionVisible}" IsReadOnly="True"/>

			<!--
			<TextBox x:Name="OperandNumerator" Text="{Binding OperandNumerator}" HorizontalAlignment="Right" VerticalAlignment="Stretch" Grid.Row="0" Grid.Column="4" IsVisible="{Binding IsAdditionVisible}"/>
			<Border Height="2" Background="Black" Margin="5,0" Grid.Row="1" Grid.Column="4" IsVisible="{Binding IsAdditionVisible}"/>
			<TextBox x:Name="OperandDenominator" Text="{Binding OperandDenominator}" HorizontalAlignment="Right" VerticalAlignment="Stretch" Grid.Row="2" Grid.Column="4" IsVisible="{Binding IsAdditionVisible}"/>-->
			
		</Grid>
	</Panel>
</Window>
